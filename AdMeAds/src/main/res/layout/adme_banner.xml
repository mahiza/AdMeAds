<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/privacyIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/privacy_icon"
        android:layout_alignRight="@+id/bannerPanel"
       />

    <LinearLayout
        android:id="@+id/bannerPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/privacyIcon">

        <com.proit.admeads.AdMeView
            android:id="@+id/adBannerView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/banner_cover"/>

    </LinearLayout>

</RelativeLayout>